<h1 class="page-header text-center">Hello {{model.name}}</h1>

<div class="row clearfix">
  <div class="col-md-4">
    <h4>Contact:</h4>
    <p>Phone: {{model.phone}}</p>
    <p>Email: {{model.email}}</p>

    <h3>Add Stolen Bike</h3>
    {{#link-to 'add-bike'}} Add Bike {{/link-to}}
    {{outlet}}


  </div>
  <div class="col-md-5 col-md-offset-2">

  <br /> <br />
  <!-- Begin MailChimp Signup Form -->
  <div class="col-md-6 col-md-offset-6">
    <img src="assets/images/stolen.jpeg" alt="" />
  </div>
  <div class="row clearfix">
    <div class="col-md-6 col-md-offset-6">
      <link href="//cdn-images.mailchimp.com/embedcode/slim-081711.css" rel="stylesheet" type="text/css">
      <style type="text/css">
      #mc_embed_signup{background:#fff; clear:left; font:14px Helvetica,Arial,sans-serif; }
      /* Add your own MailChimp form style overrides in your site stylesheet or in this style block.
      We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
      </style>
      <div id="mc_embed_signup">
        <form action="//bitballoon.us11.list-manage.com/subscribe/post?u=9e2f7a8da8179b3c46ae992e1&amp;id=eabe5de3e8" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
          <div id="mc_embed_signup_scroll">
            <label for="mce-EMAIL">Subscribe to Bikes Alert mailing list</label>
            {{input type="hidden" value=model.email name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address"}}
            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
            <div style="position: absolute; left: -5000px;"><input type="text" name="b_9e2f7a8da8179b3c46ae992e1_eabe5de3e8" tabindex="-1" value=""></div>
            <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!--End mc_embed_signup-->
  </div>
</div>
{{#if model.bikes}}
<h1 class="text-center">Registered bikes for {{model.name}}</h1>
  {{#each model.bikes as |bike|}}
    {{#if bike.lost}}
    {{#link-to 'bike' bike.id}}
      <div id="notFound" class="row clearfix well">
        <div class="col-md-6">
          <img class="bike-image" src="{{bike.image}}"/>
          <div id="notFoundHover">
          <p>Serial Number: {{bike.serial}}</p>
          <p>Date lost: {{bike.date}}</p>
          <p>Color: {{bike.color}}</p>
          <p>Make: {{bike.make}}</p>
        </div>
        </div>
        <div class="col-md-6 ">

          <p>Address: {{bike.address}}</p>
          <p>{{google-map address=bike.address}}</p>
        </div>
      </div>
    {{/link-to}}
  {{else}}
  {{/if}}
  {{/each}}

  {{#each model.bikes as |bike|}}
  {{#if bike.lost}}
  {{else}}
  <div id="found" class="row clearfix well">
    <div class="col-md-6">
      <img class="bike-image" src="{{bike.image}}"/>
      <p>Color: {{bike.color}}</p>
      <p>Make: {{bike.make}}</p>
      <p>Serial Number: {{bike.serial}}</p>
      <p>Date Found: {{bike.date}}</p>
      <p class="lead"> {{bike.story}}</p>
    </div>
    <div class="col-md-6">
      <p>Address: {{bike.address}}</p>
      <p>{{google-map address=bike.address}}</p>
    </div>
  </div>
  {{/if}}
  {{/each}}

{{else}}
Currently no bikes are listed stolen

{{/if}}
